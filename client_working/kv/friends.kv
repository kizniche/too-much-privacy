<FriendRow>:
    size_hint: (1, None)
    orientation: 'horizontal'
    spacing: 10

    Widget:
        id: status_widget
        size_hint: (None, None)
        size: (30, 30)
        canvas.before:
            Color:
                rgb: 1, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size


<FriendBox>:
    size_hint: (1, 1)
    orientation: 'vertical'

    BoxLayout:
        size_hint: (1, None)
        height: 44
        orientation: 'horizontal'

        Widget:
            size_hint: (1, 1)

        Label:
            size_hint: (None, 1)
            text: 'Sort By:'

        Spinner:
            id: sort_by
            text: 'Name'
            values: ('Name', 'Userid', 'Status')
            size_hint: (None, 1)
            height: 44

        Spinner:
            id: sort_order
            text: u'v'
            values: (u'v', '^')
            size_hint: (None, None)
            height: 44
            width: 44
            font_size: 14
            bold: True

    ScrollView:
        id: scroller
        size_hint: (1, 1)
        do_scroll_x: False

    BoxLayout:
        size_hint: (1, None)
        height: 24
        padding: 10

        TextBoxLabel:
            id: groupchat_label
